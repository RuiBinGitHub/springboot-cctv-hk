<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.dao.CompanyDao">

	<!-- 插入数据 -->
	<insert id="insertCompany" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO company VALUES(nextval('indexID'),
			#{name},
			#{code},
			#{cont},
			#{term},
			#{date}
		)
	</insert>

	<!-- 更新数据 -->
	<update id="updateCompany" parameterType="Company">
		UPDATE company SET name=#{name},
			code=#{code},
			cont=#{cont},
			term=#{term},
			date=#{date}
		WHERE id=#{id}
	</update>
	
	<!-- 删除数据 -->
	<delete id="deleteCompany" parameterType="Company">
		DELETE FROM company WHERE id=#{id}
	</delete>
	<!-- 根据ID查询数据 -->
	<select id="findCompanyByID" parameterType="int" resultType="Company">
		select * from company where id = #{id}
	</select>
	
	<select id="findInfoCompany" parameterType="Map" resultType="Company">
		select * from company where id != 0
		<if test="id != null">
			and id=#{id}
		</if>
		<if test="name != null">
			and name like #{name}
		</if>
		<if test="code != null">
			and code = #{code}
		</if>
	</select>
	
	<select id="findListCompany" parameterType="Map" resultType="Company">
		select * from company where id != 0
		<if test="name != null">
			and name like #{name}
		</if>
		order by date desc
		<if test="page > 0">
			limit 15 offset (#{page}-1)*15
		</if>
	</select>
	
	<select id="getCount" parameterType="Map" resultType="int">
		select count(*) from company
		<where>
			<if test="name != null">
				name like #{name}
			</if>
		</where>
	</select>
	
</mapper>
 